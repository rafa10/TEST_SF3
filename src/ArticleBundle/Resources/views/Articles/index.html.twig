{% extends "ArticleBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - index {% endblock %}

{% block content %}
	
	<div class="row">
		<div class="col s12 m8 offset-m2">
			<div class="card amber darken-2">
		        <div class="card-content white-text center-align">
		            <p class="card-title"> Liste des articles </p>
		        </div>
		    </div>
		</div>
	</div>

	<div class="row">
		<div class="col s12 m8 offset-m2">
			<a class="waves-effect waves-light btn right" href="{{ path('article_create') }}"><i class="material-icons left">add</i>Ajouter article</a>
		</div>
	</div>

    {% for item in articles %}

	    <div class="row">
	        <div class="col s12 m8 offset-m2">
	          <div class="card">
	            <div class="card-content ">
	              <div class="card-title"><b>{{item.title}}</b> <span class="right grey-text"> par {{ item.createdBy }} {{ item.createdAt|date('d/m/Y') }} </span> </div>
	              <p>{{item.leadings}}</p>
	            </div>
	            <div class="card-action">
	              <a href="{{ path('article_show',{slug: item.slug}) }}">Lire la suite</a>
	            </div>
	          </div>
	        </div>
	      </div>

	{% endfor %}
    

{% endblock %}
